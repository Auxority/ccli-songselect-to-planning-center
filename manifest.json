{
  "manifest_version": 2,
  "name": "CCLI SongSelect to Planning Center",
  "version": "0.11.0",
  "description": "Import songs from CCLI SongSelect to Planning Center",
  "permissions": [
    "storage",
    "https://songselect.ccli.com/*",
    "https://services.planningcenteronline.com/*",
    "https://api.planningcenteronline.com/*",
    "https://upload.planningcenteronline.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://songselect.ccli.com/*",
        "https://services.planningcenteronline.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "web_accessible_resources": ["content.js"],
  "applications": {
    "gecko": {
      "id": "ccli-songselect@example.com",
      "strict_min_version": "57.0"
    }
  }
}
